#!/bin/bash

NAME=APP_NAME
DIR=PROJECT_DIR
APP_DIR=$DIR/PROJECT_SUBDIR/app
USER=ubuntu
GROUP=ubuntu
WORKERS=2
VENV=$DIR/.venv/bin/activate
BIND=unix:$DIR/run/gunicorn.sock
LOG_LEVEL=warning
MAX_REQUESTS=10
MAX_REQUESTS_JITTER=5

cd $APP_DIR
source $VENV

exec gunicorn app:app \
  --name $NAME \
  --workers $WORKERS \
  --user=$USER \
  --group=$GROUP \
  --bind=$BIND \
  --log-level=$LOG_LEVEL \
  --log-file=- \
  --max-requests $MAX_REQUESTS \
  --max-requests-jitter $MAX_REQUESTS_JITTER
